{
    "name": "deluge-online",
    "version": "1.0.0",
    "description": "Typescript Project",
    "main": "dist/index.js",
    "license": "MIT",
    "scripts": {
        "start": "ts-node -r tsconfig-paths/register src/index.ts",
        "build": "webpack",
        "lint": "tslint src/**/*.ts",
        "test": "jest --colors --watchAll",
        "test:ci": "cross-env CI=true jest --colors",
        "format": "prettier --write \"src/**/*\"",
        "conflict-rules": "tslint-config-prettier-check ./tslint.json"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/tsconfig.json"
            }
        },
        "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
        "moduleNameMapper": {
            "^~/(.*)$": "<rootDir>/src/$1"
        },
        "moduleDirectories": ["<rootDir>/src", "node_modules"],
        "preset": "ts-jest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "tslint -c tslint.json --fix",
            "git add"
        ],
        "*.{json,css}": ["prettier --write", "git add"]
    },
    "prettier": {
        "parser": "typescript",
        "semi": false,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "devDependencies": {
        "@types/jest": "^24.0.6",
        "@types/node": "^10.12.24",
        "cross-env": "^5.2.0",
        "fork-ts-checker-webpack-plugin": "^0.5.2",
        "husky": "^1.1.4",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.1",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.16.4",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.0.2",
        "tsconfig-paths": "^3.8.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.16.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.3.3",
        "webpack": "^4.29.5",
        "webpack-cli": "^3.1.2",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/dotenv": "^6.1.0",
        "@types/dotenv-flow": "^0.2.1",
        "@types/email-templates": "^3.5.1",
        "@types/express": "^4.16.1",
        "@types/imap-simple": "^4.2.1",
        "@types/lodash": "^4.14.122",
        "@types/mongoose": "^5.3.20",
        "@types/nodemailer": "^6.1.0",
        "bluebird": "^3.5.3",
        "body-parser": "^1.18.3",
        "delay": "^4.1.0",
        "dns-then": "^0.1.0",
        "dotenv": "^6.2.0",
        "dotenv-flow": "^0.4.0",
        "email-templates": "^5.0.5",
        "express": "^4.16.4",
        "imap-simple": "^4.3.0",
        "lodash": "^4.17.11",
        "mail": "^0.2.3",
        "nodemailer": "^5.1.1",
        "nodemailer-pug-engine": "^1.0.1",
        "p-queue": "^4.0.0",
        "smtp-client": "^0.3.1",
        "smtp-protocol": "^2.4.7",
        "socks": "^2.3.2"
    }
}
